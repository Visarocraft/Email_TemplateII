<table width="100%" cellpadding="0" cellspacing="0" style="background:#0e105b; padding:32px 0 0; font-family: 'Raleway', sans-serif;">
  <tr>
    <td align="center">
      <!-- Container -->
      <table width="100%" cellpadding="0" cellspacing="0" style="max-width:1000px;">
        <!-- Logo -->
        <tr>
          <td align="center" style="padding:0 20px;">
            <!-- Mobile/Desktop Logo Alignment -->
            <table width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td align="center" style="text-align:center;" class="mobile-center desktop-left">
                  <img src="{{logoUrl}}" alt="Logo" style="width:112px; max-width:112px; display:block; height:auto;" class="logo-img">
                </td>
              </tr>
            </table>
          </td>
        </tr>

        <!-- Spacing -->
        <tr>
          <td height="32" style="font-size:32px; line-height:32px;">&nbsp;</td>
        </tr>

        <!-- Content Row -->
        <tr>
          <td style="padding:0 20px;">
            <table width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <!-- Mobile: Image First -->
                <td width="100%" valign="top" style="text-align:center; display:block;" class="mobile-block desktop-hide">
                  <img src="{{imageUrl}}" alt="Celebration Image" style="width:100%; max-width:280px; display:block; margin:0 auto; height:auto;">
                </td>
              </tr>
              
              <tr>
                <!-- Text Content -->
                <td width="100%" valign="top" style="text-align:center; padding-bottom:20px; display:block;" class="mobile-text">
                  <h1 style="color:#ffffff; font-size:30px; font-weight:bold; margin:0 0 12px 0; line-height:1.2;">{{main}}</h1>
                  <h2 style="color:#ffffff; font-size:20px; font-weight:600; margin:12px 0; line-height:1.3;">{{subtitle}}</h2>
                  <div style="display:inline-block; background:#0206b8; padding:8px 16px; border-radius:6px; font-weight:600; font-size:18px; color:#ffffff; box-shadow:0 0 20px #0206b8; line-height:1.4;">
                    {{text}}
                  </div>
                </td>
              </tr>

              <!-- Desktop Layout -->
              <tr class="mobile-hide">
                <!-- Left Column (Text) -->
                <td width="50%" valign="top" style="text-align:left; padding-bottom:20px; padding-right:20px;">
                  <h1 style="color:#ffffff; font-size:40px; font-weight:bold; margin:0 0 16px 0; line-height:1.2;">{{main}}</h1>
                  <h2 style="color:#ffffff; font-size:24px; font-weight:600; margin:12px 0 20px 0; line-height:1.3;">{{subtitle}}</h2>
                  <div style="display:inline-block; background:#0206b8; padding:8px 16px; border-radius:6px; font-weight:600; font-size:20px; color:#ffffff; box-shadow:0 0 20px #0206b8;">
                    {{text}}
                  </div>
                </td>

                <!-- Right Column (Image) -->
                <td width="50%" valign="middle" style="text-align:center;">
                  <img src="{{imageUrl}}" alt="Celebration Image" style="width:100%; max-width:480px; display:block; margin:0 auto; height:auto;">
                </td>
              </tr>
            </table>
          </td>
        </tr>

        <!-- Bottom Spacing -->
        <tr>
          <td height="40" style="font-size:40px; line-height:40px;">&nbsp;</td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Responsive CSS -->
<style>
  @media only screen and (max-width: 768px) {
    .mobile-block { display: block !important; }
    .mobile-hide { display: none !important; }
    .mobile-center { text-align: center !important; }
    .mobile-text h1 { font-size: 30px !important; }
    .mobile-text h2 { font-size: 20px !important; }
    .mobile-text div { font-size: 18px !important; }
    .logo-img { margin: 0 auto !important; }
  }
  
  @media only screen and (min-width: 769px) {
    .desktop-hide { display: none !important; }
    .desktop-left { text-align: left !important; }
  }
  
  /* Base responsive styles */
  table { border-collapse: collapse; }
  img { border: 0; outline: none; text-decoration: none; }
</style>