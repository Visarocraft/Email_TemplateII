<table
  class="email-root"
  width="100%"
  cellpadding="0"
  cellspacing="0"
  style="background:#0e105b; padding:1rem 0 0; font-family:'Raleway', sans-serif; margin:0 auto;"
>
  <tr>
    <td align="center">
      <!-- Container -->
      <table
        class="email-container"
        cellpadding="0"
        cellspacing="0"
        border="0"
        style="max-width:600px; width:100%; padding:0 1rem; margin:0 auto;"
      >
        <!-- Logo -->
        <tr>
          <td class="logo-cell" style="text-align:left; padding-bottom:1rem;">
            <img
              class="logo-img"
              src="{{logoUrl}}"
              alt="Logo"
              style="display:block; width:100%; max-width:130px; height:auto;"
            />
          </td>
        </tr>

        <!-- Content Row -->
        <tr>
          <td class="content-cell" style="padding:0;">
            <table
              class="content-grid"
              cellpadding="0"
              cellspacing="0"
              border="0"
              style="width:100%; max-width:600px;"
            >
              <tr>
                <!-- Left Column (Text) -->
                <td
                  class="left-col"
                  valign="middle"
                  style="vertical-align:middle; text-align:left; padding-right:1rem;"
                >
                  <h1
                    class="main-title"
                    style="color:#ffffff; font-weight:bold; font-size:42px; margin:0;"
                  >
                    {{main}}
                  </h1>

                  <h2
                    class="subtitle"
                    style="color:#ffffff; font-size:22px; font-weight:600; margin:12px 0;"
                  >
                    {{subtitle}}
                  </h2>

                  <div class="cta-wrap" style="margin-top:10px;">
                    <div
                      class="cta-badge"
                      style="background:#0206b8; padding:8px 16px; border-radius:6px; font-weight:600; font-size:20px; color:#ffffff; box-shadow:0 0 20px #0206b8; width:fit-content;"
                    >
                      {{text}}
                    </div>
                  </div>
                </td>

                <!-- Right Column (Image) -->
                <td
                  class="right-col"
                  valign="middle"
                  style="vertical-align:middle; text-align:center;"
                >
                  <img
                    class="hero-image"
                    src="{{imageUrl}}"
                    alt="Celebration Image"
                    style="display:block; width:100%; max-width:280px; height:auto;"
                  />
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Responsive Styles -->
<style>
  @media only screen and (max-width: 620px) {
    .content-grid {
      display: block !important;
    }

    .left-col,
    .right-col {
      display: block !important;
      width: 100% !important;
      text-align: center !important;
      padding: 0 !important;
    }

    .left-col h1 {
      font-size: 32px !important;
    }

    .left-col h2 {
      font-size: 18px !important;
    }

    .cta-badge {
      margin: 0 auto !important;
      font-size: 18px !important;
    }

    .hero-image {
      margin: 1rem auto 0 auto !important;
      max-width: 300px !important;
      height: auto !important;
    }

    .logo-cell {
      text-align: center !important;
    }

    .logo-img {
      margin: 0 auto !important;
      max-width: 110px !important;
      height: auto !important;
    }
  }
</style>
