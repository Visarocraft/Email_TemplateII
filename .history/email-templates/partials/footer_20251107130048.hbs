<table
  class="email-root"
  width="100%"
  cellpadding="0"
  cellspacing="0"
  style="
    background-color:#0e105b;
    padding:1rem 0 0;
    font-family:'Raleway', Arial, sans-serif;
    margin:0 auto;
    color:#ffffff;
    -webkit-text-size-adjust:none;
    -ms-text-size-adjust:none;
    color-scheme:light only;
  "
>
  <tr>
    <td align="center">
      <!-- Container -->
      <table
        class="email-container"
        cellpadding="0"
        cellspacing="0"
        border="0"
        style="max-width:700px; width:100%; padding:0 1rem; margin:0 auto;"
      >
        <!-- Logo -->
        <tr>
          <td class="logo-cell" style="text-align:left; padding-bottom:1rem;">
            <img
              class="logo-img"
              src="{{logoUrl}}"
              alt="Logo"
              style="display:block; max-width:130px; height:auto;"
            />
          </td>
        </tr>

        <!-- Content Row -->
        <tr>
          <td class="content-cell" style="padding:0;">
            <table
              class="content-grid"
              width="100%"
              cellpadding="0"
              cellspacing="0"
              border="0"
              style="max-width:700px;"
            >
              <tr>
                <!-- Left Column (Text) -->
                <td
                  class="left-col"
                  valign="middle"
                  style="
                    vertical-align:middle;
                    text-align:left;
                    padding-right:1rem;
                    width:100%;
                    max-width:320px;
                  "
                >
                  <h1
                    class="main-title"
                    style="color:#ffffff; font-weight:bold; font-size:42px; margin:0; line-height:1.2;"
                  >
                    {{main}}
                  </h1>

                  <h2
                    class="subtitle"
                    style="color:#ffffff; font-size:22px; font-weight:600; margin:12px 0; line-height:1.3;"
                  >
                    {{subtitle}}
                  </h2>

                  <div class="cta-wrap" style="margin-top:10px;">
                    <div
                      class="cta-badge"
                      style="background:#0206b8; padding:8px 16px; border-radius:6px; font-weight:600; font-size:20px; color:#ffffff; box-shadow:0 0 20px #0206b8; width:fit-content;"
                    >
                      {{text}}
                    </div>
                  </div>
                </td>

                <!-- Right Column (Image) -->
                <td
                  class="right-col"
                  valign="middle"
                  style="vertical-align:middle; text-align:center; width:100%; max-width:280px;"
                >
                  <img
                    class="hero-image"
                    src="{{imageUrl}}"
                    alt="Celebration Image"
                    style="display:block; max-width:280px; width:100%; height:auto;"
                  />
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Footer -->
