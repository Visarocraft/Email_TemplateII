<table width="100%" cellpadding="0" cellspacing="0" style="background:#0e105b; padding:32px 0; font-family: 'Raleway', sans-serif;">
  <tr>
    <td align="center">
      <!-- Container -->
      <table width="600" cellpadding="0" cellspacing="0">
        <!-- Logo -->
        <tr>
          <td align="l">
            <img src="{{logoUrl}}" alt="Logo" style="width:128px; display:block;">
          </td>
        </tr>

        <!-- Spacing -->
        <tr>
          <td height="32"></td>
        </tr>

        <!-- Content Row -->
        <tr>
          <td>
            <table width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <!-- Left Column (Text) -->
                <td width="50%" valign="top" style="text-align:center; padding-bottom:20px;">
                  <h1 style="color:#ffffff; font-size:40px; font-weight:bold; margin:0;">{{main}}</h1>
                  <h2 style="color:#ffffff; font-size:24px; font-weight:600; margin:12px 0;">{{subtitle}}</h2>
                  <div style="display:inline-block; background:#0206b8; padding:8px 16px; border-radius:6px; font-weight:600; font-size:20px; color:#ffffff; box-shadow:0 0 20px #0206b8;">
                    {{text}}
                  </div>
                </td>

                <!-- Right Column (Image) -->
                <td width="50%" valign="middle" style="text-align:center;">
                  <img src="{{imageUrl}}" alt="Celebration Image" style=" max-width:100%; display:block;">
                </td>
              </tr>
            </table>
          </td>
        </tr>

      </table>
    </td>
  </tr>
</table>


